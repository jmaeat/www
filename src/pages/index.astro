---
import BaseLayout from '@layouts/BaseLayout.astro';
import PostPreview from '@components/PostPreview.astro';

const title = 'Content Strategy & Miscellany';
const description =
	'Iâ€™m a front-end web developer, designer, and content strategist living in Tacoma, WA.';

const posts = await Astro.glob('./posts/*.md');
const filteredPosts = await posts.filter((x) => x.frontmatter.draft != true);
---

<BaseLayout {title} {description}>
	<div class='wrapper'>
		<section class='hero' aria-labelledby='#title'>
			<h1 id='title'>Writing</h1>
			<small class='count'>
				{filteredPosts.length} post{filteredPosts.length > 1 && <span>s</span>}
			</small>
		</section>
		<section class='posts'>
			{filteredPosts.map((post) => <PostPreview post={post} />)}
		</section>
	</div>
</BaseLayout>

<style>
	.posts {
		padding-block: 2rem;
		display: flex;
		flex-direction: column;
	}
</style>
