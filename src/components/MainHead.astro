---
import { SITE_DETAILS } from '../config.js';
// import { SEO } from 'astro-seo'; // https://github.com/jonasmerlin/astro-seo

export interface Props {
  title: string;
  description: string;
}

const { title = SITE_DETAILS.title, description = SITE_DETAILS.description } = Astro.props as Props;

var noindex;

if (process.env.NODE_ENV === 'development') noindex = true;
else noindex = false;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

