---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import ThemeToggle from '@components/ThemeToggle.astro';
import Footer from '@components/Footer.astro';

const { title, description, image, type, section, tags, datePublished, dateModified, prev, next } =
	Astro.props;
---

<html lang='en'>
	<head>
		<BaseHead
			{title}
			{description}
			{image}
			{type}
			{section}
			{tags}
			{datePublished}
			{dateModified}
			{prev}
			{next}
		/>
	</head>
	<body>
		<Header />
		<main>
			<slot></slot>
		</main>
		<Footer />
		<ThemeToggle />
	</body>
</html>
