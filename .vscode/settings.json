{
  "files.exclude": {
    "**/dist": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/dist": true
  },
  "emmet.includeLanguages": {
    "astro": "html"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "cSpell.words": ["Astro"],
  "prettier.documentSelectors": ["**/*.astro"]
}
