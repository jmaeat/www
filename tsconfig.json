{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@img/*": ["src/img/*"],
      "@styles/*": ["src/styles/*"]
    }
  }
}
